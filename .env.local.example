# Example environment file for Farm2Fork v3
# Copy this file to .env.local and update with your actual values

# Required for build to succeed - MUST be provided
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_SUPABASE_SERVICE_KEY=your_supabase_service_key

# Optional - can be empty for basic development
NEXT_PUBLIC_SERVER_URL=
NEXT_PUBLIC_ASSETS_DIR=
NEXT_PUBLIC_MAPBOX_API_KEY=
NEXT_PUBLIC_BLOB_READ_WRITE_TOKEN=

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Firebase authentication (optional)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APPID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# AWS Amplify authentication (optional)
NEXT_PUBLIC_AWS_AMPLIFY_USER_POOL_ID=
NEXT_PUBLIC_AWS_AMPLIFY_USER_POOL_WEB_CLIENT_ID=
NEXT_PUBLIC_AWS_AMPLIFY_REGION=

# Auth0 authentication (optional)
NEXT_PUBLIC_AUTH0_CLIENT_ID=
NEXT_PUBLIC_AUTH0_DOMAIN=
NEXT_PUBLIC_AUTH0_CALLBACK_URL=

# Cron job security (required for production)
CRON_SECRET=your_secure_random_string_for_cron_jobs

SIMPLEPAY_MERCHANT_KEY_HUF=
SIMPLEPAY_MERCHANT_ID_HUF=
SIMPLEPAY_PRODUCTION=
SIMPLEPAY_REDIRECT_URL=

WOO_SITE_URL=
WOO_USER_KEY=
WOO_SECRET_KEY=

# Email configuration
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

NEXT_PUBLIC_ADMIN_EMAIL_FOR_NOTIFICATIONS=admin@yourdomain.com,anotheradmin@yourdomain.com
BILLINGO_API_KEY=

# CookieYes ID
NEXT_PUBLIC_COOKIE_YES_ID=your_cookie_yes_id
NEXT_PUBLIC_RE_CAPTCHA_GOOGLE_SITE_KEY=recaptcha_site_key
GOOGLE_RE_CAPTCHA_SECRET_KEY=recaptcha_secret_key
GOOGLE_API_KEY=google_cloud_api_key
