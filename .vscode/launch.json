    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Debug",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}",
            "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**/*.js"]
        },
        {
            "type": "node-terminal",
            "name": "Lint fix",
            "request": "launch",
            "command": "npm run lint:fix",
            "cwd": "${workspaceFolder}",
            "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**/*.js"]
        }
    ],
    "skipFiles": ["${workspaceFolder}/node_modules/**/*.js", "<node_internals>/**/*.js"]
}
